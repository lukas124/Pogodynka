<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.pogodynka.WeatherActivity$PlaceholderFragment"
    tools:showIn="@layout/activity_weather">

    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_above="@+id/weather_icon"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_below="@+id/updated_field2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_below="@+id/city_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="122dp" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_field2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/updated_field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_above="@+id/weather_icon2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/weather_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_above="@+id/current_temperature_field2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/current_temperature_field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_alignTop="@+id/current_temperature_field"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/details_field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_temperature_field"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/updated_field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/updated_field2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/weather_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_above="@+id/current_temperature_field3"
        android:layout_alignEnd="@+id/current_temperature_field3" />

    <TextView
        android:id="@+id/current_temperature_field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_above="@+id/details_field2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/details_field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_field2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
